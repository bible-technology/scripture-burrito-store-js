{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://burrito.bible/schema/scripture_flavor_type.schema.json",
    "title": "Scripture Burrito Scripture Flavor Type",
    "type": "object",
    "properties": {
	"flavorType": {  
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "const": "scripture"
                },
                "flavor": {
                    "type": "object",
                    "oneOf": [
                        {
                            "properties": {
                                "name": {
                                    "type": "string",
                                    "pattern": "^x-[a-z][A-za-z0-9]*$"
                                }
                            }
                        },
                        {
                            "properties": {
                                "name": {
                                    "type": "string",
                                    "enum": [
                                        "textTranslation",
                                        "audioTranslation",
                                        "signLanguageTranslation",
                                        "brailleScripturePublication"
                                    ]
                                }
                            }
                        }
                    ],
                    "required": [
                        "name"
                    ]
                },
                "bookScope": {"$ref": "book_scope.schema.json"},
                "canonType": {"$ref": "canon_type.schema.json"},
                "canonSpec": {"$ref": "canon_spec.schema.json"}
	    }
	}
    },
    "additionalProperties": false
}
